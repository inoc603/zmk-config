#define HRM_OPTS(tapping_term_ms) \
	flavor = "balanced"; \
	tapping-term-ms = <tapping_term_ms>; \
	quick-tap-ms = <175>; \
	require-prior-idle-ms = <150>; \
	bindings = <&kp>, <&kp>;

#define HRM_POSITIONAL(keys) \
	hold-trigger-key-positions = <keys, KEYS_T>; \
	hold-trigger-on-release;

ZMK_HOLD_TAP(hm, HRM_OPTS(250))
ZMK_HOLD_TAP(hml, HRM_OPTS(250) HRM_POSITIONAL(KEYS_R))
ZMK_HOLD_TAP(hmr, HRM_OPTS(250) HRM_POSITIONAL(KEYS_L))
ZMK_HOLD_TAP(hmls, HRM_OPTS(175) HRM_POSITIONAL(KEYS_R))
ZMK_HOLD_TAP(hmrs, HRM_OPTS(175) HRM_POSITIONAL(KEYS_L))
