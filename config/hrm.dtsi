#define HRM(tapping_term_ms) \
	flavor = "balanced"; \
	tapping-term-ms = <tapping_term_ms>; \
	quick-tap-ms = <75>; \
	require-prior-idle-ms = <150>; \
	bindings = <&kp>, <&kp>;

#define HRM_POSITIONAL(tapping_term_ms, keys) \
	HRM(tapping_term_ms) \
	hold-trigger-key-positions = <keys KEYS_T>; \
	hold-trigger-on-release;

ZMK_HOLD_TAP(hm, HRM(250))
ZMK_HOLD_TAP(hml, HRM_POSITIONAL(250, KEYS_R))
ZMK_HOLD_TAP(hmr, HRM_POSITIONAL(250, KEYS_L))
ZMK_HOLD_TAP(hmls, HRM_POSITIONAL(175, KEYS_R))
ZMK_HOLD_TAP(hmrs, HRM_POSITIONAL(175, KEYS_L))
